<p>
  <a href="<%= edit_course_path(@course) %>" class="btn btn-primary my-2">Editar Curso</a>
  <a href="<%= course_path(@course) %>" class="btn btn-primary my-2" data-turbo-method="delete" data-turbo-confirm="Tem certeza?">Remover Curso</a>
</p>

<div class="row">
  <div class="col mx-auto">
    <h1 class="fw-light"><%= @course.title %></h1>
    <p class="avaliações">
      Avaliações e outras ações
    </p>

    <div class="row">
      <div class="col-sm-3 text-center">
        <img src="<%= asset_path @course.thumbnail %>" width="300" height="225" class="object-fit-fill" alt="Foto">
      </div>
      <div class="col-sm-9">
        <p class="lead text-body-secondary"><%= @course.description %></p>
      </div>
    </div>
    <p>
      <a href="#" class="btn btn-primary my-2">Comprar</a>
      <a href="#" class="btn btn-secondary my-2">Voltar</a>
    </p>
  </div>
</div>
