<div class="list">

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">Lista de Cursos</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <!-- div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle d-flex align-items-center gap-1">
        <i class="bi bi-calendar3"></i>
        This week
      </button -->
      <a href="<%= new_course_path %>" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1">
        <i class="bi bi-plus-square-fill fw-bolder"></i> Novo
      </a>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th width="50">#</th>
          <th width="*%">Title</th>
          <th width="50">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.id.to_s.rjust(4, '0') %></td>
            <td><%= course.title %></td>
            <td>
              <div class="btn-group bg-light-subtle">
                <a class="btn btn-sm btn-outline-secondary text-info" href="<%= course_path(course) %>" title="Visualizar"><i class="bi bi-zoom-in"></i></a>
                <a class="btn btn-sm btn-outline-secondary text-success" href="<%= edit_course_path(course) %>" title="Editar"><i class="bi bi-pencil-square"></i></a>
                <a href="<%= course_path(course) %>" class="btn btn-sm btn-outline-secondary text-danger" data-turbo-method="delete" data-turbo-confirm="Tem certeza?" title="Remover"><i class="bi bi-trash3"></i></a>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
